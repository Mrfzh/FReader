<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_tip_dialog_bg">

    <TextView
        android:id="@+id/tv_dialog_tip_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="! 提示"
        android:textColor="@color/color_tip_title"
        android:textSize="18sp"
        android:layout_gravity="center"
        android:gravity="center|left"
        android:paddingLeft="15dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_tip_line" />

    <TextView
        android:id="@+id/tv_dialog_tip_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:text="确定要退出登录？"
        android:textColor="@color/color_tip_content"
        android:textSize="18sp"
        android:layout_gravity="center"
        android:gravity="center" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_tip_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_dialog_tip_cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="否"
            android:textSize="18sp"
            android:textColor="@color/color_tip_choice"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/selector_dialog_tip_choice_left"
            android:clickable="true"/>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/color_tip_line"/>

        <TextView
            android:id="@+id/tv_dialog_tip_ensure"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="是"
            android:textSize="18sp"
            android:textColor="@color/color_tip_choice"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/selector_dialog_tip_choice_right"
            android:clickable="true"/>

    </LinearLayout>

</LinearLayout>